<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableLeft="@drawable/ic_home"
                android:text="Dashboard"
                style="@style/CustomFontStyle"/>

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:src="@drawable/ic_more" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Wallet"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/balance_load"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wallet"
                        android:layout_marginTop="15dp"
                        android:indeterminateTint="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wallet"
                        android:layout_marginTop="15dp"
                        android:text="â‚¹0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_account_balance_wallet_black_24dp" />

                    <Button
                        android:id="@+id/add_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="40dp"
                        android:background="@color/colorPrimary"
                        android:drawableLeft="@drawable/ic_add"
                        android:padding="10dp"
                        android:text="Add Money"
                        android:textColor="#fff" />

                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_below="@id/first"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layerType="software"
        android:src="@drawable/dash" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:layout_toRightOf="@id/imageView2"
        android:fontFamily="@font/montserrat"
        android:text="Account"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_below="@id/first"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/account"
        android:layerType="software"
        android:src="@drawable/dash" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:padding="10dp">

        <Button
            android:id="@+id/book"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_add"
            android:fontFamily="@font/montserrat"
            android:padding="30dp"
            android:text="Book Ticket"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/profile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="15dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_person"
            android:fontFamily="@font/montserrat"
            android:padding="30dp"
            android:text="Account Profile"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/history"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_history"
            android:fontFamily="@font/montserrat"
            android:padding="30dp"
            android:text="Booking History"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/show"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_local_play"
            android:fontFamily="@font/montserrat"
            android:padding="30dp"
            android:text="Show Ticket"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:fontFamily="@font/montserrat"
        android:text="Verified by VISA"
        android:textStyle="italic|bold" />

</RelativeLayout>